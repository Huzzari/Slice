<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pancakeninjas.slice.ConnectActivity"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.25">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="list Paired Devices"
            android:id="@+id/button3"
            android:onClick="pairedDevices"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="become discoverable"
            android:id="@+id/button4"
            android:onClick="becomeDiscoverable"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="enable bluetooth"
            android:id="@+id/button5"
            android:onClick="checkEnabled" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="discover devices"
            android:id="@+id/button6"
            android:onClick="discover" />

        <TextView android:text="Hi there" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".75">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" />
    </LinearLayout>

</LinearLayout>
